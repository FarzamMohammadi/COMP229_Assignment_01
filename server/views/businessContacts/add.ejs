<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->

<div class="container">
    <div class="dor">
        <div class="offset-md-3 col-md-6"></div>
        <h1><% title %></h1>
        
        <form class="form" method="POST">
            <div class="form-group">
                <label for="nameTextField">Contact Name:</label>
                <input type="text" class="form-control"
                id="nameTextField" placeholder="Enter The Contact Name"
                name="name" required>
            </div>

            <div class="form-group">
                <label for="emailTextField">Email: </label>
                <input type="email" class="form-control"
                id="emailTextField" placeholder="Enter Email"
                name="email" required>
            </div>

            <div class="form-group">
                <label for="numberTextField">Price</label>
                <input type="number" class="form-control"
                id="numberTextField" placeholder="Enter Phone Number"
                name="number" required>
            </div>

            <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i>Submit</button>

                <a href="/contacts-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i>Cancel</a>
        </form>

    </div>
</div>


